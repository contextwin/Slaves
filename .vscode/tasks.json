{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc アクティブなファイルのビルド",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-O3",
				"-o",
				"Slaves",
				"main.c",
				"image.c",
				"menue.c",
				"common.c",
				"font.c",
				"status.c",
				"-lX11",
				"-lImlib2"
			],
			"options": {
				"pwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "コンパイラ: /usr/bin/gcc"
		}
	]
}